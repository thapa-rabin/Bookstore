<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ShowList</servlet-name>
        <servlet-class>Servlets.ShowList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindSelectedBook</servlet-name>
        <servlet-class>Servlets.FindSelectedBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>Servlets.Cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookInfoValidationServlet</servlet-name>
        <servlet-class>Servlets.BookInfoValidationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginVerification</servlet-name>
        <servlet-class>Servlets.LoginVerification</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowList</servlet-name>
        <url-pattern>/ShowList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindSelectedBook</servlet-name>
        <url-pattern>/FindSelectedBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookInfoValidationServlet</servlet-name>
        <url-pattern>/BookInfoValidationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginVerification</servlet-name>
        <url-pattern>/LoginVerification</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
